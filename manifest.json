{
    "manifest_version": 3,
    "name": "YouTube Video Downloader",
    "version": "1.0.0",
    "description": "A Chrome extension to download YouTube videos",
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "src/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "*.js",
                "*.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}